<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <Button
            android:id="@+id/sleep_form_back_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="back"/>

        <EditText
            android:id="@+id/sleep_form_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="วันที่"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เวลาเข้านอน : "/>

            <EditText
                android:id="@+id/sleep_form_sleep_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="XX"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

            <EditText
                android:id="@+id/sleep_form_sleep_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="XX"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เวลาตื่นนอน : "/>

            <EditText
                android:id="@+id/sleep_form_wake_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="XX"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

            <EditText
                android:id="@+id/sleep_form_wake_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="XX"/>

        </LinearLayout>

        <Button
            android:id="@+id/sleep_form_save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="save"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>